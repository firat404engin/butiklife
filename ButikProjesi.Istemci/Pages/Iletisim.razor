@page "/iletisim"
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16 mb-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Bizimle İletişime Geçin</MudText>
    <MudText Typo="Typo.h6" Align="Align.Center" Color="Color.Dark" Class="mb-12" Style="max-width: 600px; margin: auto;">
        Sorularınız, önerileriniz veya iş birlikleri için bize ulaşmaktan çekinmeyin.
    </MudText>

    <MudGrid Spacing="6">
        <MudItem xs="12" md="5">
            <MudPaper Outlined="true" Elevation="0" Class="pa-6" Height="100%">
                <MudStack Spacing="4">
                    <MudText Typo="Typo.h6">İletişim Bilgileri</MudText>
                    <MudDivider />
                    <div class="d-flex">
                        <MudIcon Icon="@Icons.Material.Filled.LocationOn" Class="mr-4 mt-1" />
                        <MudText><strong>Adres:</strong> Butik Plaza, Moda Cd. No:1, Kadıköy/İstanbul</MudText>
                    </div>
                    <div class="d-flex">
                        <MudIcon Icon="@Icons.Material.Filled.Phone" Class="mr-4 mt-1" />
                        <MudText><strong>Telefon:</strong> +90 (216) 123 45 67</MudText>
                    </div>
                    <div class="d-flex">
                        <MudIcon Icon="@Icons.Material.Filled.Email" Class="mr-4 mt-1" />
                        <MudText><strong>E-posta:</strong> destek@butik.com</MudText>
                    </div>
                </MudStack>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" md="7">
            <MudPaper Outlined="true" Elevation="0" Class="pa-6">
                 <MudForm>
                    <MudText Typo="Typo.h6" GutterBottom="true">Mesaj Gönderin</MudText>
                    <MudTextField T="string" Label="Adınız Soyadınız" Variant="Variant.Outlined" Class="mt-4" />
                    <MudTextField T="string" Label="E-posta Adresiniz" InputType="InputType.Email" Variant="Variant.Outlined" Class="mt-4" />
                    <MudTextField T="string" Label="Mesajınız" Lines="5" Variant="Variant.Outlined" Class="mt-4" />
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Class="mt-4">Gönder</MudButton>
                </MudForm>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>